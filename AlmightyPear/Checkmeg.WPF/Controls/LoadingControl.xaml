<UserControl x:Class="Checkmeg.WPF.Controls.LoadingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:Checkmeg.WPF.Controls"
             xmlns:utils="clr-namespace:Checkmeg.WPF.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Background>

        <ImageBrush Opacity="0.4" ImageSource="..\Resources\Textures\background_monochromatic.png" Stretch="UniformToFill" AlignmentX="Left"/>
    </UserControl.Background>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
        <fa:ImageAwesome Icon="Spinner" Spin="True" SpinDuration="2" Foreground="{DynamicResource mg.solid.100}" Height="60" Width="60" Margin="40,0" />
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="60" Text="{utils:Localization Loading3Dots}"></TextBlock>
            <TextBlock FontSize="12" Text="{utils:Localization SettingUpThingsForYou}"></TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>
